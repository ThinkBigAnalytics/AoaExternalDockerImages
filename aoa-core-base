FROM openjdk:17-alpine

RUN apk update
RUN apk add --no-cache \
    python3 \
    py3-pip \
    python3-dev \
    build-base \
    make \
    bash \
    curl \
    openssh-client \
    vim \
    bc \
    jq \
    docker \
    py3-cryptography \
    py3-pandas \
    py3-numpy \
    py3-yaml \
    py3-psutil \
    py3-pycryptodome \
    ca-certificates \
    git

RUN rm -f /usr/bin/python && ln -s /usr/bin/python3 /usr/bin/python
RUN rm -f /usr/bin/pip && ln -s /usr/bin/pip3 /usr/bin/pip

RUN pip install --no-cache-dir Jinja2==3.1.2 s3cmd==2.2.0 aoa

