RUN apk add --no-cache \
    python3 \
    py3-pip \
    make \
    bash \
    curl \
    openssh-client \
    vim \
    bc \
    jq \
    docker \
    py3-cryptography \
    py3-pandas \
    py3-numpy

RUN rm -f /usr/bin/python && ln -s /usr/bin/python3 /usr/bin/python
RUN rm -f /usr/bin/pip && ln -s /usr/bin/pip3 /usr/bin/pip

RUN pip install --no-cache-dir teradataml
